{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Extensions settings",
    "type": "object",
    "properties": {
        "chunkExtensions": {
            "type": "array",
            "description": "Custom buttons to quickly add/remove chunks",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the extension button in UI"
                    },
                    "removeAllChunks": {
                        "type": "boolean",
                        "description": "Whether to remove all existing chunks before adding new ones specified in 'chunksToAdd'"
                    },
                    "chunksToRemove": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "description": "Name of the chunk to remove"
                        }
                    },
                    "chunksToAdd": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the chunk to add"
                                },
                                "value": {
                                    "type": "string",
                                    "description": "Text value of the chunk to add"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}