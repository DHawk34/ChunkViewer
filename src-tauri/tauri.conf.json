{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "png_chunk_viewer",
    "version": "0.9.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true,
        "save": true,
        "message": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
          "*",
          "https://asset.localhost"
        ]
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/*"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.reney.chunkviewer",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://asset.localhost *; img-src 'self' * blob: asset: https://asset.localhost https://tauri.localhost; style-src 'unsafe-inline' 'self'"
    },
    "cli": {
      "args": [
        {
          "name": "filename",
          "takesValue": true
        },
        {
          "name": "parent-window",
          "takesValue": true
        },
        {
          "name": "extension",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fileDropEnabled": false,
        "fullscreen": false,
        "resizable": true,
        "title": "PNGChunkViewer",
        "width": 1000,
        "height": 600
      }
    ]
  }
}