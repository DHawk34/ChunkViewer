{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "App settings",
    "type": "object",
    "properties": {
        "allowUnsafeChunkNames": {
            "type": "boolean",
            "description": "Whether to save 4-character long chunk names as an 'unsafe' code or simple text"
        },
        "parseParamsOnLoad": {
            "type": "boolean",
            "description": "Parse paramaters on image load"
        },
        "showOnlyBiggestBlock": {
            "type": "boolean",
            "description": "Show only biggest block (ComfyUI)"
        },
        "chunkType": {
            "type": "string",
            "description": "Type of chunk to use when saving. tEXt is the default one (no compression)",
            "enum": [
                "tEXt",
                "iTXt",
                "zTXt"
            ]
        }
    }
}