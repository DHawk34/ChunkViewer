{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "png-chunk-viewer",
    "version": "0.8.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true,
        "save": true,
        "message": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
          "*",
          "https://asset.localhost"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.reney.dev",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self' *; connect-src 'self' https://asset.localhost *; img-src 'self' asset: https://asset.localhost *; style-src 'unsafe-inline' 'self'"
    },
    "cli": {
      "args": [
        {
          "name": "filename",
          "takesValue": true
        },
        {
          "name": "parent-window",
          "takesValue": true
        },
        {
          "name": "extension",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "PNGChunkViewer",
        "width": 1000,
        "height": 600
      }
    ]
  }
}